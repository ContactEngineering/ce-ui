{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/*"],
      "topobank/*": ["frontend/*"]
    }
  },
  "include": ["frontend/**/*.ts", "frontend/**/*.vue"],
  "exclude": ["node_modules"]
}
